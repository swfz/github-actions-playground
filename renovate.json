{
  "extends": [
    "config:base"
  ],
  "labels": ["renovate"],
  "regex": {
    "fileMatch": ["\\.yml$"]
  },
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/[^/]+\\.ya?ml$"],
      "matchStrings": ["uses: (?<depName>.*?)@(?<currentValue>.*?)$"],
      "datasourceTemplate": "github-tags"
    },
    {
      "fileMatch": ["sample.yml"],
      "matchStrings": ["version: (?<depName>.*?)@(?<currentValue>.*?)$"],
      "datasourceTemplate": "github-tags"
    }
  ]
}
